<h2>Записаться</h2>

<script type="text/javascript">
$(function(){

  $('#color').simplecolorpicker();
  $('#datetimepicker').datetimepicker();

});

</script>

<form action="/visit" method="POST">
  <div class="form-group">
    <label >Ваше имя</label>
    <input name="user_name" type="text" class="form-control"  placeholder="имя" value = "<%= @username %>">
  </div>

  <div class="form-group">
    <label >Ваш телефон</label>
    <input name="user_phone" type="text" class="form-control"   placeholder="телефон" value = "<%= @phone %>">
  </div>

  <div class="form-group">
    <label >Когда вас ждать?</label>
    <input name="date_time" id="datetimepicker" type="text" class="form-control"   placeholder="дата и время" value = "<%= @date_time %>">
  </div>

<div class="form-group">
          <label>К кому вы хотите записаться?</label><br>
          <select name="barber_select" class="form-control">
         
         <% @barbers.each do |item| %>
          <option <%= @barber_select == item['name'] ? 'selected' : '' %>> <%= item['name'] %></option>
          <% end %>



      </select>
      </div>

      <div class="form-group">
      <label>Выберите краску: </label>
      <select id = "color" name = "hair_color">
  <option value="#7bd148">Green</option>
  <option value="#5484ed">Bold blue</option>
  <option value="#a4bdfc">Blue</option>
  <option value="#46d6db">Turquoise</option>
  <option value="#7ae7bf">Light green</option>
  <option value="#51b749">Bold green</option>
  <option value="#fbd75b">Yellow</option>
  <option value="#ffb878">Orange</option>
  <option value="#ff887c">Red</option>
  <option value="#dc2127">Bold red</option>
  <option value="#dbadff">Purple</option>
  <option value="#e1e1e1">Gray</option>
</select> 

</div>



  <button type="submit" class="btn btn-primary">Записаться</button>
</form>